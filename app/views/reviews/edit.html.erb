<h1 class= 'display-4 text-dark text-center'>Edit Your Review for: <%= @book.title%></h1>

<%= render 'form', review: @review %>

<div class="text-center mt-4">
<%= button_to "Delete Review", book_review_path(@book, @review), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-outline-info" %>
<%= link_to "Book Reviews", book_reviews_path(@book), class: "btn btn-outline-info m-2" %><br>
<%= link_to "View Book", book_path(@book), class: "btn btn-outline-info m-2" %><br>
</div>
